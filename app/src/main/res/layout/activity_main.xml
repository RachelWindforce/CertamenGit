<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/BoxSexo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D2FBCD"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="384dp"
        android:layout_height="649dp"
        android:background="#83FFFFFF"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="Calculo de IMC"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sexo:"
            android:textColor="#000000"
            android:textSize="24sp" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="42dp" />

        <EditText
            android:id="@+id/txtPeso"
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:ems="10"
            android:hint="Peso"
            android:inputType="number"
            android:textColor="#000000"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/txtEstatura"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:ems="10"
            android:hint=" Estatura (cm)"
            android:inputType="number"
            android:textColor="#000000"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="IMC :"
            android:textAlignment="center"
            android:textColor="#520360"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/textImc"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnCalcular"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:onClick="CalcularImc"
            android:text="Calcular IMC"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/mensajito"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:textColor="#000000"
            android:textSize="16sp" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>